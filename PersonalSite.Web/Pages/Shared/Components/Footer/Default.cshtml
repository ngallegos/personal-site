@using PersonalSite.Web.Pages.Shared.Components.NavLinks
@model PersonalSite.ContentModel.SiteMetaData

<div class="w-full md:w-1/3 md:pr-32 pt-12 md:pt-0 md:sticky md:bottom-0 order-4 md:order-3">
    <div class="max-w-2xl md:float-right md:text-right leading-loose tracking-tight md:mb-16">
        <p class="font-bold my-4 md:my-12">Places To Go</p>
        <vc:nav-links site-meta="@Model" link-type="@NavLinksType.Footer" ul-class="flex flex-wrap justify-between flex-row md:flex-col" li-class="nav mx-2 md:mx-0"></vc:nav-links>
    </div>
</div>
<div class="w-full md:w-2/3 order-2 md:order-4">
    <div class="max-w-2xl leading-loose tracking-tight">
        @if (!string.IsNullOrEmpty(Model.AboutMe))
        {
            <p class="font-bold my-4 md:my-12">About Me</p>
            @Model.HtmlAboutMe
        }
    </div>
</div>